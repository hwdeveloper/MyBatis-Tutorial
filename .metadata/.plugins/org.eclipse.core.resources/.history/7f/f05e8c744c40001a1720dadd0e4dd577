<mapper namespace="com.ff.mapper.StudentMapper">

	<insert id="insertStudent">
		insert into student(name, classroom_id)
		values(#{name},#{classroomId})
	</insert>
	<delete id="deleteTeacherById">
		delete from student where id = #{id}
	</delete>
<update id="modifyUser" parameterType="com.web.mybatis.domain.User">
        UPDATE tb_user SET name=#{name},sex=#{sex},age=#{age} WHERE id=#{id}
    </update>
</mapper>


















